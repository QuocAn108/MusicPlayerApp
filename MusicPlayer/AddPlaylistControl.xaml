<UserControl x:Class="MusicPlayer.AddPlaylistControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Width="300" Height="100" Background="#FF252525" 
          VerticalAlignment="Center" HorizontalAlignment="Center"
        >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="ENTER PLAYLIST NAME" Foreground="Green" FontWeight="ExtraBold" Margin="75,0,75,30"  />
        <TextBox x:Name="NewPlaylistNameTextBox" BorderBrush="Green"  Grid.Row="0" Margin="37,30,35,10" BorderThickness="1" 
                 Background="Transparent" Foreground="Green" FontWeight="ExtraBold" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10">
            <Button Content="Cancel" Click="CancelAddPlaylist_Click"/>
            <Button Content="Create" Click="CreatePlaylist_Click" />
        </StackPanel>
    </Grid>
</UserControl>
